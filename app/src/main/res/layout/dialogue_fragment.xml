<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/activity_five"
        android:text="@string/dialogue"
        android:textSize="@dimen/activity_thirty" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_forehunder"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/dialogue_fragment_receive"
            android:layout_width="@dimen/hundred_and_ninety"
            android:layout_height="wrap_content"></ListView>

        <ListView
            android:id="@+id/dialogue_fragment_send"
            android:layout_width="@dimen/hundred_and_ninety"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_thirty"></ListView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/dialogue_fragment_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:hint="@string/content" />

        <Button
            android:id="@+id/dialogue_fragment_save"
            android:layout_width="@dimen/activity_fivity"
            android:layout_height="@dimen/fority"
            android:layout_weight="2"
            android:background="@drawable/save" />
    </LinearLayout>
</LinearLayout>