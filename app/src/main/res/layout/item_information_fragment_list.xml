<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_information_fragment_image"
        android:layout_width="@dimen/activity_fivity"
        android:layout_height="@dimen/activity_fivity"
        android:layout_marginLeft="@dimen/activity_five"
        android:layout_marginTop="@dimen/activity_five"
        android:background="@drawable/d" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_five"
        android:layout_marginTop="@dimen/activity_five"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_information_fragment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name" />

        <TextView
            android:id="@+id/item_information_fragment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_five"
            android:text="count" />
    </LinearLayout>
</LinearLayout>