<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/activity_hunder"
    android:layout_height="@dimen/activity_hunder"
    android:layout_centerInParent="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ProgressBar
            android:id="@+id/load_dialog_press"
            android:layout_width="@dimen/activity_fivity"
            android:layout_height="@dimen/activity_fivity" />
    </RelativeLayout>

    <TextView
        android:id="@+id/test_dialog_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/loging"
        android:textColor="@drawable/login_btn_bg"
        android:textSize="@dimen/activity_twenty" />
</LinearLayout>